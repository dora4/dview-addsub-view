<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ic_minus"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/addsubview_left_selector"
        android:clickable="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/addsubview_minus" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/addsubview_middle_selector"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:gravity="center"
        android:singleLine="true"
        android:inputType="number"
        android:minWidth="40dp"
        android:text="1"
        android:maxLength="2"
        android:textColor="@color/color_text_bg"
        android:textCursorDrawable="@null"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ic_plus"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/addsubview_right_selector"
        android:clickable="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/addsubview_plus" />
</LinearLayout>